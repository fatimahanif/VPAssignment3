<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="CustomFont">
        pack://application:,,,/fonts/#Montserrat
    </FontFamily>


    <Style TargetType="Control" x:Key="DefaultStyle">
        <Setter Property="FontFamily" Value="{StaticResource CustomFont}"/>
    </Style>

    <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultStyle}"/>
    <Style TargetType="Label" BasedOn="{StaticResource DefaultStyle}"/>
    <Style TargetType="Button" BasedOn="{StaticResource DefaultStyle}"/>

</ResourceDictionary>